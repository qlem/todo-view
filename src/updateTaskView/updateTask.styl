.update-task-container
  display flex
  flex-direction column
  padding 0 20% 0 20%

  .title
    font-size 1.4em
    font-weight bold
    margin 20px 0 5px 0

  .task-description-container
    display flex
    .field-label
      margin-right 20px

  .task-content
    padding-top 10px

  .field-label
    font-weight bold
    margin 10px 0 5px 0

  .task-state, .task-priority
    margin-top 10px
    .field-label
      margin-right 20px
      display inline-block
    label
      margin-right 10px
      &:hover
        cursor pointer

  .buttons-container
    display flex
    justify-content right
    margin 20px 0 20px 0

  .btn
    color #4c4c4c
    &:hover
      color #212121
      cursor pointer

  .confirm-btn
    margin-left 30px

  .offset
    flex-grow 1
