@font-face
  font-family Montserrat
  font-style normal
  src  url('./fonts/Montserrat-Regular.ttf')

body
  margin 0
  padding 0
  width 100%
  height 100%

#app
  // font-family 'Avenir', Helvetica, Arial, sans-serif
  font-family Montserrat
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  position fixed
  top 0
  left 0
  width 100%
  height 100%

#header
  background #006aff
  border-bottom solid 1px black
  height 50px
  z-index 1
  display flex
  align-items center

  .app-title
    font-size 2em
    font-weight 900
    color wheat
    padding-left 20px
    flex-grow 1

  .logout-btn
    color #232323
    margin-right 20px
    &:hover
      color: #c1c1c1
      cursor pointer

#content
  background #ccdddd
  height calc(100% - 50px)
  overflow auto
