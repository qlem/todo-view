.new-task-container
  display flex
  flex-direction column
  padding 0 20% 0 20%

  .title
    font-size 1.4em
    font-weight bold
    margin 20px 0 5px 0

  .field-label
    font-weight bold
    margin 10px 0 5px 0

  .task-content
    resize none

  .task-priority
    margin-top 10px
    .field-label
      margin-right 20px
      display inline-block
    label
      margin-right 10px
      &:hover
        cursor pointer

  .task-deadline
    display flex
    align-items center
    margin-top 5px
    .field-label
      margin-right 20px

  .datepicker-container
    width: 200px
    float none
    clear none
    margin 0

  .buttons-container
    display flex
    justify-content right
    margin 20px 0 20px 0

  .btn
    color #4c4c4c
    &:hover
      color #212121
      cursor pointer

  .confirm-btn
    margin-left 30px
